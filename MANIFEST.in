include LICENSE
include README.md
include pyproject.toml
include setup.py

recursive-include hysplit *.py
recursive-include hysplit *.pyi
recursive-include hysplit *.cpp
recursive-include hysplit *.h
recursive-include hysplit *.typed
recursive-include hysplit/bin *

recursive-include docs *.md
recursive-include docs *.ipynb
recursive-include docs *.png
recursive-include docs *.svg

recursive-include tests *.py

prune tests/comparison/met
prune tests/comparison/out*
prune tests/comparison/*.csv
prune tests/comparison/*.pdf

global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
